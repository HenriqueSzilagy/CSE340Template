<h1 id="accountManagement"><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error=> { %>
      <li>
        <%= error.msg %>
      </li>
    <% }) %>
  </ul>
<% } %>

<h1>You're logged in</h1>
<div id="accountManagementLayout">
  <% if (account_type === 'Client') { %>
    <h2>Welcome <%= account_firstname %></h2>
  <% } else if (account_type === 'Employee' || account_type === 'Admin') { %>
    <h2>Welcome <%= account_firstname %></h2>
    <p><a href="/account/update">Update Account Information</a></p>
    <p><a href="/account/delete">Delete Account</a></p> 
    <h3>Inventory Management</h3>
    <p><a href="/inv">Access Inventory Management</a></p>
  <% } %>

  <% if (account_type === 'Client') { %>
    <p><a href="/account/update">Update Account Information</a></p>
    <p><a href="/account/delete">Delete Account</a></p> 
  <% } %>
</div>
